{
  "name": "single-purpose-emitter",
  "version": "1.0.0",
  "description": "Single purpose emitter",
  "scripts": {
    "test": "cross-env CI=true react-scripts test --bail",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "clean": "rimraf dist",
    "build": "npm run clean && cross-env NODE_ENV=production rollup -c",
    "prettier": "prettier --write",
    "lint": "tslint --fix -p tsconfig.json -c tslint.json"
  },
  "keywords": [
    "emitter",
    "attach",
    "detach"
  ],
  "author": "Igor Novikov <novikovio74@gmail.com>",
  "license": "MIT",
  "files": [
    "/dist",
    "/src"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "main": "dist/single-purpose-emitter.cjs.js",
  "module": "dist/single-purpose-emitter.esm.js",
  "jsnext:main": "dist/single-purpose-emitter.esm.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Hooked74/single-purpose-emitter.git"
  },
  "bugs": {
    "url": "https://github.com/Hooked74/single-purpose-emitter/issues"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.5.5"
  },
  "devDependencies": {
    "@svgr/rollup": "^4.3.2",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "cross-env": "^5.2.0",
    "custom-tslint-formatters": "^2.4.0",
    "dotenv": "^8.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react-scripts": "^3.0.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "rollup-plugin-strip": "^1.2.2",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-url": "^2.2.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-react": "^4.0.0",
    "tslint-react-a11y": "^1.0.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.5.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier",
      "yarn lint",
      "yarn test-staged",
      "git add"
    ],
    "*.{json,scss,css,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
